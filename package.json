{
  "name": "owlanter",
  "displayName": "Owlanter",
  "description": "Owlanter script development tool",
  "version": "1.0.1",
  "publisher": "aToy0m0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aToy0m0/owlanter-pleasanter-dev-tol.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onView:owlanterSites",
    "onCommand:owlanter.sitesRefresh",
    "onCommand:owlanter.siteList",
    "onCommand:owlanter.siteSelect",
    "onCommand:owlanter.siteCurrent",
    "onCommand:owlanter.siteAdd",
    "onCommand:owlanter.pull",
    "onCommand:owlanter.push",
    "onCommand:owlanter.watch",
    "onCommand:owlanter.diff",
    "onCommand:owlanter.upload",
    "onCommand:owlanter.uploadServer",
    "onCommand:owlanter.uploadClient",
    "onCommand:owlanter.uploadFile",
    "onCommand:owlanter.scriptShow",
    "onCommand:owlanter.scriptSet",
    "onCommand:owlanter.scriptClear",
    "onCommand:owlanter.configShow",
    "onCommand:owlanter.configSet",
    "onCommand:owlanter.configSync",
    "onCommand:owlanter.configInit",
    "onCommand:owlanter.openSettings"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "owlanter",
    "script",
    "sync",
    "automation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "owlanter.sitesRefresh",
        "title": "Owlanter: サイト一覧更新",
        "icon": "$(refresh)"
      },
      {
        "command": "owlanter.siteList",
        "title": "Owlanter: サイト一覧表示",
        "icon": "$(list-unordered)"
      },
      {
        "command": "owlanter.siteSelect",
        "title": "Owlanter: サイト選択",
        "icon": "$(selection)"
      },
      {
        "command": "owlanter.siteCurrent",
        "title": "Owlanter: 現在のサイト情報表示",
        "icon": "$(info)"
      },
      {
        "command": "owlanter.siteAdd",
        "title": "Owlanter: サイト追加",
        "icon": "$(add)"
      },
      {
        "command": "owlanter.pull",
        "title": "Owlanter: スクリプト取得 (Pull)",
        "icon": "$(cloud-download)"
      },
      {
        "command": "owlanter.push",
        "title": "Owlanter: スクリプト適用 (Push)",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "owlanter.watch",
        "title": "Owlanter: 自動同期 (Watch)",
        "icon": "$(eye)"
      },
      {
        "command": "owlanter.diff",
        "title": "Owlanter: 差分表示",
        "icon": "$(diff)"
      },
      {
        "command": "owlanter.upload",
        "title": "Owlanter: スクリプトアップロード",
        "icon": "$(upload)"
      },
      {
        "command": "owlanter.uploadServer",
        "title": "Owlanter: サーバースクリプトアップロード",
        "icon": "$(server)"
      },
      {
        "command": "owlanter.uploadClient",
        "title": "Owlanter: クライアントスクリプトアップロード",
        "icon": "$(browser)"
      },
      {
        "command": "owlanter.uploadFile",
        "title": "Owlanter: ファイルアップロード",
        "icon": "$(file-code)"
      },
      {
        "command": "owlanter.scriptShow",
        "title": "Owlanter: アクティブスクリプト表示"
      },
      {
        "command": "owlanter.scriptSet",
        "title": "Owlanter: アクティブスクリプト設定"
      },
      {
        "command": "owlanter.scriptClear",
        "title": "Owlanter: アクティブスクリプト解除"
      },
      {
        "command": "owlanter.configShow",
        "title": "Owlanter: 現在の接続設定表示"
      },
      {
        "command": "owlanter.configSet",
        "title": "Owlanter: 接続設定更新"
      },
      {
        "command": "owlanter.configSync",
        "title": "Owlanter: 設定同期",
        "icon": "$(sync)"
      },
      {
        "command": "owlanter.configInit",
        "title": "Owlanter: 接続設定初期化",
        "icon": "$(plug)"
      },
      {
        "command": "owlanter.openSettings",
        "title": "Owlanter: 設定を開く",
        "icon": "$(gear)"
      }
    ],
    "configuration": {
      "title": "Owlanter Settings",
      "properties": {
        "owlanter.domain": {
          "type": "string",
          "default": "",
          "description": "Owlanter が接続するサーバーのベース URL (例: https://example.com/)",
          "scope": "application"
        },
        "owlanter.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Owlanter が利用する API キー。VS Code のユーザー設定に保存されます。",
          "scope": "application"
        },
        "owlanter.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "ファイル保存時に自動的に Owlanter へアップロード"
        },
        "owlanter.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Owlanter が出力するログレベル"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "owlanterSites",
          "name": "Owlanter Sites"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "owlanterSites",
        "contents": "サイトが登録されていません。\n[サイトを追加](command:owlanter.siteAdd)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "owlanter.configInit",
          "when": "view == owlanterSites",
          "group": "navigation@0"
        },
        {
          "command": "owlanter.configSync",
          "when": "view == owlanterSites",
          "group": "navigation@0"
        },
        {
          "command": "owlanter.sitesRefresh",
          "when": "view == owlanterSites",
          "group": "navigation@1"
        },
        {
          "command": "owlanter.siteAdd",
          "when": "view == owlanterSites",
          "group": "navigation@2"
        },
        {
          "command": "owlanter.openSettings",
          "when": "view == owlanterSites",
          "group": "navigation@9"
        }
      ],
      "view/item/context": [
        {
          "command": "owlanter.siteSelect",
          "when": "view == owlanterSites && viewItem == owlanterSite",
          "group": "inline@1"
        },
        {
          "command": "owlanter.siteCurrent",
          "when": "view == owlanterSites && viewItem == owlanterSite",
          "group": "1_info@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chokidar": "^4.0.3"
  },
  "icon": "resources/icon.png"
}
